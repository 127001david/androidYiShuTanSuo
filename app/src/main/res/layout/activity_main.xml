<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.app.davidwang.androidyishutansuo.activity.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="265dp" />

    <Button
        android:id="@+id/launch_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="launchMode" />

    <Button
        android:id="@+id/view_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="viewPosition" />

    <Button
        android:id="@+id/btn_flow_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FlowLayout" />

    <Button
        android:id="@+id/btn_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MessageActivity" />

    <Button
        android:id="@+id/btn_thread_pool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ThreadPool" />

    <Button
        android:id="@+id/btn_handler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Handler" />

</LinearLayout>
